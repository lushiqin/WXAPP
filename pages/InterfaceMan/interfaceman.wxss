/* pages/InterfaceMan/interfaceman.wxss */
/* host数据布局 */
.hostlist{
  margin: 10px;
  margin-bottom: 30px;
  padding: 10px;
  border-radius: 20px;
  box-shadow: -8px 0 25px darkgray,0 -8px 25px darkgray,0 8px 25px darkgray,8px 0 25px darkgray;
  background-color: goldenrod;
  display: flex;
  flex-direction: row-reverse;
  justify-content: center;
  flex-wrap: wrap-reverse;
  /* text-shadow: 5px 5px 5px black; */
}
.hostlist button{
  margin: 2px;
  background-color: teal;
  border-radius: 20px;
  box-shadow: 5px 5px 15px pink;
}


/* 接口数据布局 */
.interfaceList{
  justify-content: center;
  display: flex;
  flex-flow: row;
  flex-wrap: wrap; 
  background-color: orchid;
  margin: 10px;
  padding: 10px;
  border-radius: 20px;
  box-shadow:-8px 0 25px darkgray,0 -8px 25px darkgray,0 8px 25px darkgray,8px 0 25px darkgray;
  margin-bottom: 30px;
  /* text-shadow: 5px 5px 5px black; */
}
.interfaceList button{
  background-color: royalblue;
  margin: 2px;
  border-radius: 20px;
  font-size: 18px;
  box-shadow: 5px 5px 15px palegreen;
}
.dointerface{
  position: fixed;
  top: 0px;
  z-index: 20;
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
}
.closemodal{
  color: wheat;
  font-size: 25px;
  margin-top: 15px;
  margin-right: 15px;
  text-align: right;
}
.interfaceinfo{
  margin-bottom: 20px;
  text-align: center;
  color: orange;
}
.interfaceinfo input{
  font-size: 15px;
  background-color: gold;
  height: 30px;
  line-height: 30px;
  text-align: center;
  margin-bottom: 2px;
  margin-left: 20px;
  margin-right: 20px;
  color: black;
  border-radius: 20px;
}
.interfaceinfo button{
  margin-top: 10px;
  width: 80px;
  background-color: hotpink;
  box-shadow: 5px 5px 15px navajowhite;
}




/* 新增接口数据布局 */
.addList{
  margin: 10px;
  margin-bottom: 30px;
  padding: 10px;
  border-radius: 20px;
  background-color: olivedrab;
  /* text-shadow: 5px 5px 5px black; */
  box-shadow: -8px 0 25px darkgray,0 -8px 25px darkgray,0 8px 25px darkgray,8px 0 25px darkgray;
}
.addList input{
