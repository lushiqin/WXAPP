/* pages/shop/shop.wxss */

.active{
  background-color: greenyellow;
  width: 70px;
}

.navleft{
  position: fixed;
  top: 3%;
  background-color: orange;
  width: 70px;
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  font-family: "楷体";
  font-size: 14px;
  padding-top: 15px;
  padding-bottom: 15px;
  border-radius: 10px;
  box-shadow: 10px 10px 15px green;
}
.navtext{
  height: 40px;
  line-height: 40px;
}

.navright{
  justify-content: center;
  display: flex;
  flex-flow: row;
  flex-wrap: wrap; 
  position: absolute;
  left: 85px;
}
.book{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 40px;
  line-height: 40px;
  background-color: palegoldenrod;
  text-align: center;
  margin: 5px;
  border-radius: 5px;
  font-family: "楷体";
  font-size: 14px;
  padding: 2px;
  padding-top: 8px;
}
.navright image{
  width: 110px;
  height: 120px;
}